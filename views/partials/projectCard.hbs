<div class="col">
  <a href="/projects/{{this._id}}" style="text-decoration: none">
    <div class="card h-100">
      <img src="{{this.images.[0]}}" class="card-img-top">
      <div class="card-body h-100">
        <div>
          <h5 class="card-title">{{this.title}}</h5>
          <p>{{date this.createdAt "MMMM Do YYYY"}}</p>

        </div>

        <div>
          <img class="rounded-circle shadow" src="{{this.owner.image}}" width="20" />
          <a class="btn btn-link" href="/users/{{this.owner._id}}">
            {{this.owner.fullName}}
          </a>
        </div>
      </div>
    </div>
  </a>
</div>